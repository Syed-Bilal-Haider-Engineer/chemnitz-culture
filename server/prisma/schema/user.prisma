model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  lat       Float
  lng       Float
  location  String
  role      Role       @default(USER)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  favorites Favorite[]
}

enum Role {
  USER
  ADMIN
}
